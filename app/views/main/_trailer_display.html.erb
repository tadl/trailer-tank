<% if @search %>
<h2>Searching For: <%= @search %></h2>
<% end %>
<% if @page_title %>
<h2><%= @page_title %></h2>
<% end %>

<div id="paginate_top">
<%= will_paginate @trailers %>
</div>  
 <% @trailers.each do |trailer| %>
<img src="http://catalog.tadl.org/opac/extras/ac/jacket/medium/r/<%= trailer.record_id %>" style="float:left; max-width: 125px; margin: 10px;">
<h3><%= trailer.title %></h3>
<p>Release Date: <%= trailer.release_date %> </p>
<p>Released By: <%= trailer.publisher %> </p>
<p>Actor/Director: <%= trailer.artist %> </p>
<p>Description: <%= truncate trailer.abstract, length: 300 %> </p>
</br>
<div id="trailer_<%= trailer.record_id %>">
<% if trailer.youtube_url? %>
  <iframe width="400" height="225" src="http://www.youtube.com/embed/<%= trailer.youtube_url %>" frameborder="0" allowfullscreen>
  </iframe>
<% end %>
</div>
<div id="edit_<%= trailer.record_id %>">
<% if trailer.youtube_url? %>
  <button onclick="delete_embed('<%= trailer.record_id %>','<%= trailer.title %>')">Delete Trailer</button> 
<% else %>
  <a onclick="search_youtube('<%= trailer.title %>')">Search Youtube</a>
</br>
  Add Youtube URL: <input id="input_<%= trailer.record_id %>" type="text">
  <button onclick="check_for_embed('<%= trailer.record_id %>','<%= trailer.title %>')">Submit</button>
<% end %>  
</div> 
<div id="error_<%= trailer.record_id %>">  
</div>


<div style="clear: both"></div>
    <% end %>
<div id="paginate_bottom">
<%= will_paginate @trailers %>
</div>  