<h1>All Videos</h1>
 <% @trailers.each do |trailer| %>
<img src="http://catalog.tadl.org/opac/extras/ac/jacket/medium/r/<%= trailer.record_id %>" style="float:left; max-width: 125px; margin: 10px;">
<h3><%= trailer.title %></h3>
<p>Release Date: <%= trailer.release_date %> </p>
<p>Released By: <%= trailer.publisher %> </p>
<p>Actor/Director: <%= trailer.artist %> </p>
<p>Description: <%= truncate trailer.abstract, length: 300 %> </p>
<div id="trailer">
<% if trailer.youtube_url? %>
  <%= trailer.youtube_url %>
  <%else%>
  <div>
    Add Youtube URL: <input id="input_<%= trailer.record_id %>" type="text" name="firstname">
  <button onclick="check_for_embed('<%= trailer.record_id %>')">Submit</button>
  <div id="error_<%= trailer.record_id %>">  
  </div>
<%end %>
</div>
<div style="clear: both"></div>
    <% end %>
